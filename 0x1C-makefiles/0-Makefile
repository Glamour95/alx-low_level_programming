# Makefile for building the school executable

NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c school.c
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
